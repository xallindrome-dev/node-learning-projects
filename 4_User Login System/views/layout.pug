doctype html
html
  head
    title Jumbotron Template for Bootstrap
    // Bootstrap core CSS
    link(href='/stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Node Authentication
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            if user
             li(class=(title == "Members Area" ? "active" : ""))
               a(href='/') Members
            if !user 
             li(class=(title == "Register" ? "active" : ""))
               a(href='/users/register') Register
             li(class=(title == "Login" ? "active" : ""))
               a(href='/users/login') Login    
          ul.nav.navbar-nav.navbar-right
            if user
             li
               a(href='/users/logout') Logout    
    .container
     != messages()
     block content
    hr
    footer
     p(class="text-center") Â© 2016 Company, Inc.

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js')
    script(src='/javascripts/bootstrap.min.js')